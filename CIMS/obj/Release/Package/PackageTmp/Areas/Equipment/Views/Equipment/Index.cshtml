    });

    $('#SendEmailData').click(function () {
        if ($("#To").val() == "") {
            alert("Enter email address.");
        }
        else {
            if (!ValidateEmail($("#To").val())) {
                alert("Invalid email address.");
            }
            else {
                var NewTabledata1 = $('#printDivData .removefromtable').remove();
                var newdata = $('#printDivData').html();
