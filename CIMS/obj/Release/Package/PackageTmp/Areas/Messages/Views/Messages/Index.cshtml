@model CIMS.Models.MessagesModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
}

@*<h2>Index</h2>*@
<style>
    .groupOfTexbox {
    }

