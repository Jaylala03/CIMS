                            temphtml += '<div class="btn-show">';

                            if ('@ViewBag.Action' == 4 || '@ViewBag.Action' == 5 || '@ViewBag.Action' == 6 || '@ViewBag.Action' == 7 || '@ViewBag.Action' == 12 || '@ViewBag.Action' == 13 || '@ViewBag.Action' == 14 || '@ViewBag.Action' == 15) {

